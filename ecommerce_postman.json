        ],
        "url": {
          "raw": "http://127.0.0.1:5000/products",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["products"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n \"name\":\"Keyboard\",\n \"description\":\"Mechanical keyboard\",\n \"price\":80.00,\n \"stock\":25,\n \"brand\":\"KeyCo\"\n}"
        }
      }
    },
    {
      "name": "Products - Get by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://127.0.0.1:5000/products/1",
          "host": ["127.0.0.1"],
