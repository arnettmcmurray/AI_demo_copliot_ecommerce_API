{
  "info": {
    "name": "Ecommerce API",
    "_postman_id": "ecom-api-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:5000/api" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"user@example.com\",\"username\":\"user1\",\"password\":\"Password123!\",\"address\":\"123 Road\"}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.variables.set('accessToken', res.access_token);",
                  "if (res.refresh_token) pm.variables.set('refreshToken', res.refresh_token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"user@example.com\",\"password\":\"Password123!\"}"
            }
          }
        },
        {
          "name": "Refresh",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.access_token) pm.variables.set('accessToken', res.access_token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{refreshToken}}" }
            ],
            "url": "{{baseUrl}}/auth/refresh"
          }
        }
      ]
    },
    {
      "name": "Users",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if(pm.variables.get('accessToken')) { pm.request.headers.add({ key:'Authorization', value:`Bearer ${pm.variables.get('accessToken')}` }); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "item": [
        {
          "name": "Me",
          "request": { "method": "GET", "url": "{{baseUrl}}/users/me" }
        },
        {
          "name": "Update Me",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/users/me",
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"updated\",\"address\":\"456 Lane\"}"
            }
          }
        },
        {
          "name": "Delete Me",
          "request": { "method": "DELETE", "url": "{{baseUrl}}/users/me" }
        }
      ]
    },
    {
      "name": "Products",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if(pm.variables.get('accessToken')) { pm.request.headers.add({ key:'Authorization', value:`Bearer ${pm.variables.get('accessToken')}` }); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "item": [
        {
          "name": "List",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products?q=mouse&brand=Logitech&page=1&per_page=20"
          }
        },
        {
          "name": "Create (admin)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/products",
            "body": {
              "mode": "raw",
              "raw": "{\"name\":\"MX Master 3S\",\"description\":\"Perf mouse\",\"brand\":\"Logitech\",\"sku\":\"LOGI-MX3S-GRAPH\",\"upc\":\"097855175746\",\"price_cents\":9999,\"currency\":\"USD\",\"stock\":50}"
            }
          }
        },
        {
          "name": "Scan",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/products/scan",
            "body": { "mode": "raw", "raw": "{\"code\":\"097855175746\"}" }
          }
        }
      ]
    },
    {
      "name": "Carts",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if(pm.variables.get('accessToken')) { pm.request.headers.add({ key:'Authorization', value:`Bearer ${pm.variables.get('accessToken')}` }); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "item": [
        {
          "name": "Get My Cart",
          "request": { "method": "GET", "url": "{{baseUrl}}/carts" }
        },
        {
          "name": "Add Item by product_id",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/carts/items",
            "body": {
              "mode": "raw",
              "raw": "{\"product_id\":1,\"quantity\":1}"
            }
          }
        },
        {
          "name": "Add Item by code",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/carts/items",
            "body": {
              "mode": "raw",
              "raw": "{\"code\":\"097855175746\",\"quantity\":1}"
            }
          }
        },
        {
          "name": "Remove Item",
          "request": { "method": "DELETE", "url": "{{baseUrl}}/carts/items/1" }
        }
      ]
    },
    {
      "name": "Orders",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if(pm.variables.get('accessToken')) { pm.request.headers.add({ key:'Authorization', value:`Bearer ${pm.variables.get('accessToken')}` }); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "item": [
        {
          "name": "Checkout",
          "request": { "method": "POST", "url": "{{baseUrl}}/orders" }
        },
        {
          "name": "List My Orders",
          "request": { "method": "GET", "url": "{{baseUrl}}/orders" }
        },
        {
          "name": "Get Order",
          "request": { "method": "GET", "url": "{{baseUrl}}/orders/1" }
        }
      ]
    }
  ]
}
