{
  "info": {
    "name": "E-commerce API",
    "description": "Postman collection for testing the E-commerce API with JWT auth and role-based access.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"username\": \"user\",\n  \"password\": \"user123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/users",
              "host": ["localhost"],
              "port": "5000",
              "path": ["users"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"user123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/users/login",
              "host": ["localhost"],
              "port": "5000",
              "path": ["users", "login"]
            }
          }
        },
        {
          "name": "Get User (self or admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "http://localhost:5000/users/1",
              "host": ["localhost"],
              "port": "5000",
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"updatedUser\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/users/1",
              "host": ["localhost"],
              "port": "5000",
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "http://localhost:5000/users/1",
              "host": ["localhost"],
              "port": "5000",
              "path": ["users", "1"]
            }
          }
        }
      ]
    },
