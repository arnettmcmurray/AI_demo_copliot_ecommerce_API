{
  "info": {
    "name": "E-commerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "http://127.0.0.1:5000/auth/register",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n \"email\":\"user@example.com\",\n \"username\":\"user\",\n \"password\":\"1234\",\n \"address\":\"123 Main St\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "http://127.0.0.1:5000/auth/login",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n \"email\":\"user@example.com\",\n \"password\":\"1234\"\n}"
        }
      }
    },
    {
      "name": "Users - Me (GET)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://127.0.0.1:5000/users/me",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["users", "me"]
        }
      }
    },
    {
      "name": "Users - Me (PUT)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://127.0.0.1:5000/users/me",
          "host": ["127.0.0.1"],
          "port": "5000",
          "path": ["users", "me"]
        },
        "body": { "mode": "raw", "raw": "{\n \"username\":\"updated\"\n}" }
      }
    },
    {
      "name": "Products - All",
      "request": {
        "method": "GET",
